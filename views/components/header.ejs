<header
  class="h-20 relative px-7 lg:pl-14 lg:pr-0 bg-primary flex justify-between items-center"
>
  <span class="logo text-3xl md:text-4xl lg:text-5xl"
    ><a href="/" title="Logo">Bloggy</a></span
  >
  <nav class="lg:h-full">
    <button
      class="w-6 sm:w-7 md:w-8 fill-white lg:hidden"
      onclick="this.nextElementSibling.classList.toggle('hidden')"
      title="Navigation Menu"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
        <path
          d="M0 96C0 78.3 14.3 64 32 64l384 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 128C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32l384 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 288c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32L32 448c-17.7 0-32-14.3-32-32s14.3-32 32-32l384 0c17.7 0 32 14.3 32 32z"
        />
      </svg>
    </button>
    <ul
      class="hidden w-full lg:flex absolute lg:relative lg:h-full top-full lg:top-0 right-0 bg-primary text-white text-lg lg:text-xl xl:text-2xl text-center border-2 lg:border-none border-white"
    >
      <% const aClass=`flex p-3 justify-center items-center h-full px-4 lg:px-8
      xl:px-12 hover:bg-secondary duration-500 tracking-widest ` %>
      <li>
        <a href="/" title="Home Page" class="<%= aClass %>">Home</a>
      </li>
      <li class="border-y-2 lg:border-y-0 lg:border-x-2">
        <a href="/blogs" title="Blogs Page" class="<%= aClass %>">Blogs</a>
      </li>
      <li class="relative">
        <% if (locals.user) {%>
        <button
          title="<%= locals.user.name %> Profile Page"
          onclick="this.nextElementSibling.classList.toggle('hidden'); this.classList.toggle('bg-secondary');"
          class="<%= aClass %> outline-none w-full text-sm sm:text-base lg:text-lg text-nowrap"
        >
          <img
            src="<%= locals.user.img %>"
            alt="<%= locals.user.name %> Picture"
            class="rounded-full border-2 w-8 h-8 lg:w-9 lg:h-9 xl:w-10 xl:h-10 mr-2"
          />
          <%= locals.user.name %>
        </button>
        <ul
          class="hidden py-1 lg:py-0 space-x-10 lg:space-x-0 w-full text-white text-sm sm:text-base lg:text-xl bg-secondary border-t border-white"
        >
          <li class="inline-block lg:h-8 lg:block">
            <a href="<%= `/users/${user.name}/profile` %>"> Profile </a>
          </li>
          <% if (locals.user.isAdmin) { %>
          <li class="inline-block lg:h-8 lg:block lg:border-t lg:border-white">
            <a href="/blogs/new"> New Blog </a>
          </li>
          <li class="inline-block lg:h-8 lg:block lg:border-t lg:border-white">
            <a href="/users"> Users </a>
          </li>
          <% } %>
          <li class="inline-block lg:h-8 lg:block lg:border-t lg:border-white">
            <form action="/logout" method="post">
              <input type="submit" value="Log out" class="cursor-pointer" />
            </form>
          </li>
        </ul>
        <% } else { %>
        <a href="/login" title="Log in Page" class="<%= aClass %>">Log in</a>
        <% } %>
      </li>
    </ul>
  </nav>
</header>
