<header class="relative px-7 lg:pl-14 lg:pr-0 py-3 lg:py-0 *:min-h-full bg-primary flex justify-between items-center">
    <span class="logo xl:pb-2 text-3xl md:text-4xl lg:text-5xl"><a href="/" title="Logo">Bloggy</a></span>
    <nav>
        <button class="w-6 sm:w-7 md:w-8 fill-white flex justify-end lg:hidden"
            onclick="this.nextElementSibling.classList.toggle('hidden')" title="Navigation Menu">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path
                    d="M0 96C0 78.3 14.3 64 32 64l384 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 128C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32l384 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 288c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32L32 448c-17.7 0-32-14.3-32-32s14.3-32 32-32l384 0c17.7 0 32 14.3 32 32z" />
            </svg>
        </button>
        <ul
            class="hidden min-w-[50%] lg:flex absolute lg:relative top-full right-0 bg-primary/70 text-white text-lg lg:text-xl xl:text-2xl text-center border-2 lg:border-none border-white ">
            <% const aClass="flex justify-center items-center h-full py-4 px-4 lg:px-8 xl:px-12 hover:bg-secondary duration-500 tracking-widest " %>
                <li>
                    <a href="/" title="Home Page" class="<%= aClass %>">Home</a>
                </li>
                <li class="border-y-2 lg:border-y-0 lg:border-x-2">
                    <a href="/blogs" title="Blogs Page" class="<%= aClass %>">Blogs</a>
                </li>
                <li class="relative">
                    <% if (locals.user) {%>
                        <button title="<%= locals.user.name %> Profile Page" onclick="this.nextElementSibling.classList.toggle('hidden'); this.classList.toggle('bg-secondary');"
                            class="<%= aClass %> outline-none w-full text-sm sm:text-base lg:text-lg text-nowrap">
                            <img src="<%= locals.user.imgSrc %>" alt="<%= locals.user.name %> Picture"
                                class="rounded-full border-2 w-8 h-8 lg:w-9 lg:h-9 xl:w-10 xl:h-10 mr-2">
                            <%= locals.user.name %>
                        </button>
                        <ul class="hidden py-1 space-x-20 w-full lg:absolute right-0 text-white text-sm sm:text-base lg:text-xl bg-secondary/80 border-t border-white">
                            <li class="inline-block"><a href="/profile">
                                Profile
                            </a>
                            </li>
                            <li class="inline-block"><a href="/logout">
                                Log out
                            </a>
                            </li>
                        </ul>
                        <% } else { %>
                            <a href="/login" title="Login Page" class="<%= aClass %>">Login</a>
                            <% } %>
                </li>
        </ul>
    </nav>
</header>