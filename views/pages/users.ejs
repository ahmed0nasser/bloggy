<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Favicon -->
    <%- include("../components/favicon") %>
    <!-- Title -->
    <title>Users - Bloggy</title>
  </head>

  <body>
    <%- include("../components/header", {user: locals.user}) %>
    <main>
      <div class="container">
        <section class="py-4">
          <div class="space-y-2">
            <h1 class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-bold">
              Users
            </h1>
            <hr class="separator" />
          </div>
          <section
            class="py-5 flex flex-wrap gap-4 lg:gap-6 justify-center text-center"
          >
            <% if (!locals.users || locals.users.length == 0) {%>
            <div
              class="flex justify-center items-center font-bold text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl"
            >
              Sorry, No Blogs Available Right Now.
            </div>
            <% } else locals.users.forEach(user => { %>
            <article
              class="w-40 md:w-52 space-y-1 lg:space-y-2 px-3 xl:px-4 py-3 xl:py-4 border-2 border-secondary rounded-lg bg-grey-light/10"
            >
              <div class="flex justify-center">
                <img
                  src="<%= user.img %>"
                  alt=""
                  class="rounded-full w-10 h-10 md:w-12 md:h-12 lg:w-14 lg:h-14 xl:w-16 xl:h-16"
                />
              </div>
              <div>
                <h2 class="text-xl md:text-2xl xl:text-3xl font-bold">
                  <%= user.name %>
                </h2>
                <div
                  class="-mt-1 text-xs md:text-sm lg:text-base text-grey-heavy"
                >
                  #<%= user._id %>
                </div>
              </div>
              <div class="text-right md:mt-2">
                <a
                  href="<%= `/users/${user.name}/profile` %>"
                  class="py-1 px-2 xl:px-3 rounded-md text-sm lg:text-base xl:text-lg text-white bg-primary hover:bg-secondary duration-500"
                  >Profile</a
                >
              </div>
            </article>
            <% }); %>
          </section>
        </section>
      </div>
    </main>
    <%- include("../components/footer") %>
  </body>
</html>
