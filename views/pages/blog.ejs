<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Scripts -->
    <script src="/js/commentsSection.js" defer></script>
    <script src="/js/retrieveScroll.js" defer></script>
    <!-- Favicon -->
    <%- include("../components/favicon") %>
    <!-- Title -->
    <title><%= locals.blog.title %> - Bloggy</title>
</head>

<body>
    <%- include("../components/header", {user: locals.user}) %>
        <main>
            <div class="container">
                <!-- Blog Content Section -->
                <section class="py-4 space-y-2">
                    <div class="space-y-0.5">
                        <h1 class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-bold"><%= locals.blog.title %></h1>
                        <div class="text-xs md:text-sm lg:text-base xl:text-lg text-grey-heavy"><%= locals.blog.date %></div>
                        <hr class="separator">
                    </div>
                    <p class="text-sm sm:text-base/loose md:text-lg/loose xl:text-xl/loose"><%= locals.blog.body %></p>
                </section>
                <!-- Comments Section -->
                <section class="py-2 space-y-2 md:space-y-4 lg:space-y-6 xl:space-y-8">
                    <div class="space-y-1">
                        <h2 class="text-xl sm:text-2xl md:text-3xl xl:text-4xl font-bold">Comments</h2>
                        <hr class="separator">
                    </div>
                    <!-- User comment -->
                    <% if (locals.user) { %>
                    <form action="<%= `/blogs/${locals.blog.uri}/comments` %>" method="post" class="flex flex-wrap gap-2">
                        <div class="flex gap-2 w-full">
                            <img src="<%= locals.user.img %>" alt="<%= locals.user.name %> image"
                                class="rounded-full w-10 h-10 md:w-12 md:h-12 lg:w-14 lg:h-14 xl:w-16 xl:h-16">
                            <div class="w-full border border-primary rounded-lg">
                                <textarea name="comment" placeholder="Enter Your Comment"
                                class="w-full min-h-20 resize-none py-2 px-3 rounded-t-lg text-sm md:text-base lg:text-lg placeholder:text-grey-light/40 focus:outline-none"></textarea>
                                <div class="w-full text-right">
                                    <input type="submit" value="Comment" class="py-1 px-2 md:px-3 xl:px-4 text-sm lg:text-base xl:text-lg rounded-md text-white
                                    bg-primary hover:bg-secondary duration-500 cursor-pointer">
                                </div>
                            </div>
                        </div>
                    </form>
                    <% } else { %>
                        <div>Log in to comment</div>
                    <% } %>
                    <!-- Others Comments Section-->
                    <section id="commentsSection" class="py-2 lg:py-4 px-4 lg:px-8 space-y-4 rounded-md">
                        <% if (!locals.blog.comments || locals.blog.comments.length == 0) {%>
                            <div>There is not any comments yet...</div>                              
                        <% } else { %>
                            <% locals.blog.comments.forEach((comment, index) => { %>
                                <!-- Comment -->
                                <div class="py-4 px-6 flex flex-col gap-2 border border-primary rounded-lg">
                                    <!-- Comment Author -->
                                    <div class="flex items-center gap-2">
                                        <img src="<%= comment.author.img %>" alt="<%= comment.author.name %> image"
                                            class="rounded-full border w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 xl:w-14 xl:h-14">
                                        <div>
                                            <div class="font-bold md:text-lg xl:text-xl 2xl:text-2xl"><%= comment.author.name %></div>
                                            <!-- #TODO: implement comment relative date -->
                                            <div class="-mt-1 text-xs sm:text-sm text-stone-500">date <%= comment.isEdited? "â€¢ edited" : "" %></div>
                                        </div>
                                    </div>
                                    <!-- Comment Body -->
                                    <div class="space-y-2 text-xs sm:text-sm md:text-base lg:text-lg xl:text-xl">
                                        <p id="commentBody<%= index %>" class="break-words text-gray-600"><%= comment.body %></p>
                                        <div class="flex justify-between">
                                            <% if (locals.user) { %>
                                            <div class="flex gap-1 md:gap-2 xl:gap-4 text-primary">
                                                <form action="<%= `/blogs/${locals.blog.uri}/comments/${index}/like` %>" method="post">
                                                    <% const liked = comment.likes.includes(locals.user.name); %>
                                                    <button type="submit" class="<%= liked? "text-secondary" : "" %> hover:text-secondary duration-500 rounded"><%= liked? "Liked" : "Like" %></button>
                                                </form>
                                                <% const isAuthor = locals.user.name === comment.author.name; %>
                                                <% if (isAuthor) { %>
                                                <button id="editBtn<%= index %>" class="hover:text-secondary duration-500 rounded">Edit</button>
                                                <form action="<%= `/blogs/${locals.blog.uri}/comments/${index}/edit` %>" method="post" class="hidden w-full rounded border border-primary focus:border-secondary">
                                                    <textarea name="comment" class="min-h-20 w-full resize-none text-black focus:outline-none rounded"><%= comment.body %></textarea>
                                                    <div class="w-full text-right text-xs md:text-sm lg:text-base text-white space-x-1">
                                                        <button name="edit" type="submit" class="px-2 py-0.5 bg-primary hover:bg-secondary duration-500">Edit</button>
                                                        <button name="cancel" type="button" class="px-2 py-0.5 bg-primary hover:bg-secondary duration-500">Cancel</button>
                                                    </div>
                                                </form>
                                                <% } if (isAuthor || locals.user.isAdmin) { %>
                                                <form action="<%= `/blogs/${locals.blog.uri}/comments/${index}/delete` %>" method="post">
                                                    <button type="submit" class="hover:text-secondary duration-500 rounded">Delete</button>
                                                </form>
                                                <% } %>
                                            </div>
                                            <% } %>
                                            <div class="w-full text-right text-stone-500"><%= comment.likes.length %> Likes</div>
                                        </div>
                                    </div>
                                </div>                             
                            <% });} %>
                    </section>
                </section>
            </div>
        </main>
        <%- include("../components/footer") %>
</body>
</html>